<?xml version="1.0" encoding="UTF-8"?>
<component name="org.nuxeo.ecm.mobile.redirect.to.mobile">

  <extension target="org.nuxeo.ecm.platform.actions.ActionService"
    point="actions">

    <action id="gotoMobile" enabled="true" label="Mobile Navigation" order="5" link="#"
      confirm="document.cookie = 'skipMobileRedirection=; expires=Fri, 27 Jul 1970 02:47:11 UTC; path=/'; javascript:location.reload(true); return false;">
      <category>USER_MENU_ACTIONS</category>
      <filter id="ACTION_GO_TO_MOBILE_NX">
        <rule grant="true">
          <condition>
            #{mobileApplicationActions.isMobileBrowser()}
          </condition>
        </rule>
      </filter>
    </action>
  </extension>
</component>